<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Admin - @ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/admin_layout.css" asp-append-version="true" />
</head>
<body>

    <div class="container-fluid">
        <!-- Header -->
        <header class="row header">
            <!-- Placeholder for banner -->
            Banner Placeholder
            <!-- Carousel -->
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://images.pexels.com/photos/139309/pexels-photo-139309.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h5>First slide label</h5>
                            <p>Some representative placeholder content for the first slide.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.pexels.com/photos/163046/welcome-to-our-home-welcome-tablet-an-array-of-163046.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h5>Second slide label</h5>
                            <p>Some representative placeholder content for the second slide.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.pexels.com/photos/1137511/pexels-photo-1137511.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h5>Third slide label</h5>
                            <p>Some representative placeholder content for the third slide.</p>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <div class="row section">
            <!-- Navigation Links -->
            <div class="col-md-2">

                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Admin")"><i class="fa fa-home"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Program","Admin")"><i class="fa fa-graduation-cap"></i> Program</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Class","Admin")"><i class="fa fa-building"></i> Class</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Enrollments","Admin")"><i class="fa fa-users"></i> Enrollments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Users","Admin")"><i class="fa fa-user"></i> User</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Payments","Admin")"><i class="fa fa-money"></i> Payments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Settings","Admin")"><i class="fa fa-cogs"></i> Settings</a>
                    </li>
                    @if (!string.IsNullOrEmpty(Context.Session.GetString("Bearer_Tokens")))
                    {
                    <li class="nav-item">
                            <a class="nav-link text-danger" href="@Url.Action("Signout","Admin")"><i class="fa fa-sign-out"></i> Sign Out</a>
                    </li>
                    }
                </ul>
            </div>

            <!-- Button Strip -->
            <div class="col-md-10">

                @RenderBody()

            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <!-- Jquery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        function setSelection(linkName) {
            $(".nav-link[href*=" + linkName + "]").addClass("active");
        }
        @Html.Raw(ViewBag.JavaScriptFunction)
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
